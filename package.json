{
  "name": "nhost-root",
  "private": true,
  "version": "0.0.0",
  "description": "Nhost Monorepo",
  "author": "Nhost",
  "license": "MIT",
  "homepage": "https://nhost.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhost/nhost.git"
  },
  "bugs": {
    "url": "https://github.com/nhost/nhost/issues"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "create-config": "cp -r .config/. ./",
    "prepare": "pnpm create-config",
    "build": "pnpm turbo run build --scope='@nhost/*' --no-deps --include-dependencies",
    "build:docs": "pnpm run build --filter=nhost-documentation",
    "clean:all": "pnpm clean && rm -rf ./{{packages,examples}/*,docs}/{.nhost,node_modules} node_modules",
    "clean": "rm -rf ./{{packages,examples}/*,docs}/{dist,.next,.turbo,coverage}",
    "ci": "pnpm turbo run build test --concurrency=4 --scope='@nhost/*' && pnpm run lint",
    "ci:version": "changeset version && pnpm install --frozen-lockfile false",
    "coverage": "pnpm run test --coverage",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "pnpm turbo run lint --stream",
    "lint:fix": "pnpm turbo run lint:fix --stream",
    "prerelease": "pnpm clean && pnpm install && pnpm build",
    "release": "pnpm run prerelease && changeset publish",
    "snapshot": "pnpm prerelease && changeset version --snapshot preview && pnpm install && changeset publish --tag preview",
    "test": "pnpm turbo run test --scope='@nhost/*' --no-deps --include-dependencies",
    "changeset": "changeset",
    "wait": "wait-on http://localhost:1337/v1/auth/healthz -i 500 -t 120000",
    "docgen:build": "turbo run build --scope='@nhost/docgen'",
    "typedoc:auth": "typedoc --options \"./typedoc/auth.typedoc.json\"",
    "typedoc:react": "typedoc --options \"./typedoc/react.typedoc.json\"",
    "typedoc:nextjs": "typedoc --options \"./typedoc/nextjs.typedoc.json\"",
    "typedoc:nhost-js": "typedoc --options \"./typedoc/nhost-js.typedoc.json\"",
    "typedoc:storage": "typedoc --options \"./typedoc/storage.typedoc.json\"",
    "pre-docgen": "pnpm docgen:build",
    "docgen:auth": "pnpm typedoc:auth && turbo run start --scope='@nhost/docgen' --no-cache -- -- --path ../../typedoc/output/auth.json --output ../../docs/docs/reference/docgen/javascript/auth --slug /reference/javascript/auth --root reference/docgen/javascript/auth --sidebarConfig \"referenceSidebar\" --cleanup --title \"Auth\"",
    "docgen:storage": "pnpm typedoc:storage && turbo run start --scope='@nhost/docgen' --no-cache -- -- --path ../../typedoc/output/storage.json --output ../../docs/docs/reference/docgen/javascript/storage --slug /reference/javascript/storage --root reference/docgen/javascript/storage --sidebarConfig \"referenceSidebar\" --cleanup --title \"Storage\"",
    "docgen:nhost-js": "pnpm typedoc:nhost-js && turbo run start --scope='@nhost/docgen' --no-cache -- -- --path ../../typedoc/output/nhost-js.json --output ../../docs/docs/reference/docgen/javascript/nhost-js --slug /reference/javascript/nhost-js --root reference/docgen/javascript/nhost-js --sidebarConfig \"referenceSidebar\" --cleanup --title \"Nhost JS\"",
    "docgen:react": "pnpm typedoc:react && turbo run start --scope='@nhost/docgen' --no-cache -- -- --path ../../typedoc/output/react.json --output ../../docs/docs/reference/docgen/react --slug /reference/react --root /reference/docgen/react --sidebarConfig \"referenceSidebar\" --cleanup --title \"React\"",
    "docgen:nextjs": "pnpm typedoc:nextjs && turbo run start --scope='@nhost/docgen' --no-cache -- -- --path ../../typedoc/output/nextjs.json --output ../../docs/docs/reference/docgen/nextjs --slug /reference/nextjs --root /reference/docgen/nextjs --sidebarConfig \"referenceSidebar\" --cleanup --title \"Next.js\"",
    "docgen:combined": "pnpm pre-docgen && pnpm docgen:auth && pnpm docgen:storage && pnpm docgen:nhost-js && pnpm docgen:react && pnpm docgen:nextjs"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-syntax-flow": "^7.16.7",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@changesets/cli": "^2.22.0",
    "@faker-js/faker": "^6.1.2",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vitejs/plugin-react": "^1.3.1",
    "esbuild": "^0.14.37",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.13.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tsconfig-paths-jest": "^0.0.1",
    "turbo": "1.1.6",
    "typedoc": "^0.22.15",
    "typescript": "4.5.5",
    "vite": "^2.9.5",
    "vite-plugin-dts": "^0.9.10",
    "vite-tsconfig-paths": "^3.4.1",
    "wait-on": "^6.0.1"
  },
  "resolutions": {
    "graphql": "15.7.2"
  },
  "packageManager": "pnpm@6.24.0",
  "engines": {
    "node": ">=14"
  }
}
